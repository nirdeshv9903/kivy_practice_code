<Mycalculator>
    BoxLayout:
        size: root.width, root.height
        orientation: 'vertical'
        TextInput:
            id: calc
            text:'0'
            halign:'right'
            font_size: 65
            size_hint: (1,0.15)
        GridLayout:
            cols:4
            rows:5
            #cols
            Button:
                text:'%'
                font_size:32
                size_hint: (0.2,0.2)
            Button:
                id: clear
                text:'c'
                font_size:32
                size_hint: (0.2,0.2)
                on_press: root.Cls()
            Button:
                id: remove
                text:u"\u00AB"
                font_size:32
                size_hint: (0.2,0.2)
                on_press: root.remove()
            Button:
                text:'/'
                font_size:32
                size_hint: (0.2,0.2)
                on_press: root.oprations("/")
            #rows
            Button:
                text:'7'
                font_size:32
                size_hint: (0.2,0.2)
                background_color: (157/255,157/255,157/255)
                on_press: root.button_fun(7)
            Button:
                text:'8'
                font_size:32
                size_hint: (0.2,0.2)
                background_color: (157/255,157/255,157/255)
                on_press: root.button_fun(8)
            Button:
                text:'9'
                font_size:32
                size_hint: (0.2,0.2)
                background_color: (157/255,157/255,157/255)
                on_press: root.button_fun(9)
            Button:
                text:'*'
                font_size:32
                size_hint: (0.2,0.2)
                on_press: root.oprations("*")

            Button:
                text:'4'
                font_size:32
                size_hint: (0.2,0.2)
                background_color: (157/255,157/255,157/255)
                on_press: root.button_fun(4)
            Button:
                text:'5'
                font_size:32
                size_hint: (0.2,0.2)
                background_color: (157/255,157/255,157/255)
                on_press: root.button_fun(5)
            Button:
                text:'6'
                font_size:32
                size_hint: (0.2,0.2)
                background_color: (157/255,157/255,157/255)
                on_press: root.button_fun(6)
            Button:
                text:'-'
                font_size:32
                size_hint: (0.2,0.2)
                on_press: root.oprations("-")

            Button:
                text:'1'
                font_size:32
                size_hint: (0.2,0.2)
                background_color: (157/255,157/255,157/255)
                on_press: root.button_fun(1)
            Button:
                text:'2'
                font_size:32
                size_hint: (0.2,0.2)
                background_color: (157/255,157/255,157/255)
                on_press: root.button_fun(2)
            Button:
                text:'3'
                font_size:32
                size_hint: (0.2,0.2)
                background_color: (157/255,157/255,157/255)
                on_press: root.button_fun(3)
            Button:
                text:'+'
                font_size:32
                size_hint: (0.2,0.2)
                on_press: root.oprations("+")

            Button:
                text:'+/-'
                font_size:32
                size_hint: (0.2,0.2)
                background_color: (157/255,157/255,157/255)
                on_press: root.pos_neg()
            Button:
                text:'0'
                font_size:32
                size_hint: (0.2,0.2)
                background_color: (157/255,157/255,157/255)
                on_press: root.button_fun(0)
            Button:
                text:'.'
                font_size:32
                size_hint: (0.2,0.2)
                background_color: (157/255,157/255,157/255)
                on_press: root.dot()
            Button:
                text:'='
                font_size:32
                size_hint: (0.2,0.2)
                on_press: root.equals()